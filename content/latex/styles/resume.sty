% Don't indent paragraphs
\setlength{\parindent}{0in}
\setlength{\parskip}{\baselineskip}%

% Spacing between columns
\setlength\columnsep{30pt}

% Custom colors
\definecolor{accentcolor}{rgb}{1,0.4784313725,0.6705882353}
\definecolor{secondarycolor}{rgb}{0.7764705882,0.7960784314,0.7764705882}

% Formatting for section titles and emphasis
\titleformat{\section}
	{\fontsize{32pt}{32pt}\lowercase}
	{\thesection}
	{1em}
	{\color{secondarycolor}\sffamily}
