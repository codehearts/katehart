\newgeometry{top=4em,bottom=0.75in,right=1.25in,left=1.25in}

% Set the document typeface
\renewcommand{\rmdefault}{ptm}

% Don't indent paragraphs
\setlength{\parindent}{0in}
\setlength{\parskip}{\baselineskip}

% Spacing between columns
\setlength\columnsep{30pt}

% Custom colors
\definecolor{secondarycolor}{rgb}{0.6,0.65,0.6}
\definecolor{accentcolor}{HTML}{FF7AAB}
\definecolor{highlightcolor}{HTML}{FF4D8E}

% Don't bold description list items
\setlist[description]{font=\normalfont\space}

% Formatting for section titles and emphasis
\titleformat{\section}
	{\huge\lowercase}
	{\thesection}
	{1em}
	{\color{secondarycolor}}
\titleformat{\subsection}
	{\LARGE}
	{\thesubsection}
	{1em}
	{\hspace{-10pt}\textcolor{accentcolor}{\rule[-.2\baselineskip]{1.5pt}{.9\baselineskip}}\hspace{8pt}\rmfamily}
\DeclareTextFontCommand{\emph}{\color{highlightcolor}}
\titlespacing{\section}{0pt}{0pt}{-7.5pt}
\titlespacing{\subsection}{0pt}{0pt}{-7.5pt}

\pagenumbering{gobble} % Remove page numbers

\setlist[1]{leftmargin=0mm} % Use hanging indentation for lists
\setlist{itemsep=1pt} % Reduce the vertical space between list items
\def\labelitemi{--} % Use dashes instead of bullets
\def\labelitemii{--} % Use dashes instead of bullets

\setlength{\fboxsep}{1mm}
\setlength{\fboxrule}{1pt}

\newcommand{\button}[2]{\href{#1}{\color{highlightcolor}{\sffamily#2}}}

